@{
    ViewBag.Title = "Chat";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">                    
                    <div class="input-group">
                        <input type="text" id="message" class="form-control" maxlength="140" placeholder="Send message...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" id="sendmessage" type="button">
                                Send
                            </button>
                        </span>
                    </div>
                </div>
                <div class="panel-body">
                    <input type="hidden" id="displayname" />
                    <textarea class="form-control" id="discussion" rows="7" wrap="hard" readonly="readonly"></textarea>              
                </div>

            </div>
            <div class=" = panel panel-info">
                <div class="panel-heading"><h2 class="panel-title">Game Message</h2></div>
                <div class="panel-body">
                    <textarea class="form-control" id="gameText" rows="13" wrap="hard" readonly="readonly"></textarea>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class=" = panel panel-info">
                <div class="panel-heading"><h2 class="panel-title">Server Message Debug</h2></div>
                <div class="panel-body">
                    <textarea class="form-control" id="serverLog" rows="26" wrap="hard" readonly></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <button id="joinEnclaveButton">Join Enclave</button>
            </div>
        </div>
    </div>
</div>
    @section scripts {
        <!--Script references. -->
        <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
        <!--Reference the SignalR library. -->
        <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
        <!--Reference the autogenerated SignalR hub script. -->
        <script src="~/signalr/hubs"></script>
        <!--SignalR script to update the chat page and send messages.-->
        <script src="~/Scripts/Views/Enclave/index.js"></script>
    }
